<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
	        <ImageView
	            android:id="@+id/image_view_poi"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/img_1001" />
	
	        <TextView
	            android:id="@+id/text_view_desc"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/app_name"
	            android:paddingLeft="16dp"
	            android:paddingRight="16dp"
	            android:paddingTop="8dp"
	            android:paddingBottom="8dp"
	            android:textSize="14sp"
	            android:background="#f3ffde"
	            android:textStyle="bold"/>

	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="48dp" >

	            <ImageView
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:layout_margin="8dp"
	                android:src="@drawable/ic_address"
	                android:contentDescription="@string/app_name" />

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="48dp"
	                android:orientation="vertical"
	                android:layout_marginBottom="4dp" >
	                
			        <TextView
			            android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
			            android:text="@string/txt_address"
			            android:textColor="#aaa"
			            android:textSize="12sp" />
			        
			       <TextView
			            android:id="@+id/text_view_address"
			            android:layout_width="match_parent"
			            android:layout_height="0dip"
			            android:layout_weight="1"
			            android:layout_marginBottom="4dp"
			            android:text="@string/app_name"
			            android:textColor="#666"
			            android:textSize="12sp"
			            android:textStyle="bold" />

	            </LinearLayout>
	       </LinearLayout>
	       <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="48dp" >

	            <ImageView
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:layout_margin="8dp"
	                android:src="@drawable/ic_traffic"
	                android:contentDescription="@string/app_name" />
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="48dp"
	                android:orientation="vertical"
	                
	                android:layout_marginBottom="4dp" >


			
			
			        <TextView
			            android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
			            android:text="@string/txt_traffic"
			            android:textColor="#aaa"
			            android:textSize="12sp" />
			        
			       <TextView
			            android:id="@+id/text_view_tiffic"
			            android:layout_width="match_parent"
			            android:layout_height="0dip"
			            android:layout_weight="1"
			            android:layout_marginBottom="4dp"
			            android:text="@string/app_name"
			            android:textColor="#666"
			            android:textSize="12sp"
			            android:textStyle="bold" />

	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="48dp" >

	            <ImageView
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:layout_margin="8dp"
	                android:src="@drawable/ic_time"
	                android:contentDescription="@string/app_name" />
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="48dp"
	                android:orientation="vertical"
	                android:layout_marginBottom="4dp" >

				  <TextView
			            android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
			            android:text="@string/txt_time"
			            android:textColor="#aaa"
			            android:textSize="12sp" />
			        
			       <TextView
			            android:id="@+id/text_view_time"
			            android:layout_width="match_parent"
			            android:layout_height="0dip"
			            android:layout_weight="1"
			            android:layout_marginBottom="4dp"
			            android:text="@string/app_name"
			            android:textColor="#666"
			            android:textSize="12sp"
			            android:textStyle="bold" />

	            </LinearLayout>
	         </LinearLayout>
	         
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="48dp" >

	            <ImageView
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:layout_margin="8dp"
	                android:src="@drawable/ic_ticket"
	                android:contentDescription="@string/app_name" />
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="48dp"
	                android:orientation="vertical"
	                android:layout_marginBottom="4dp" >

				  <TextView
			            android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
			            android:text="@string/txt_ticket"
			            android:textColor="#aaa"
			            android:textSize="12sp" />
			        
			       <TextView
			            android:id="@+id/text_view_ticket"
			            android:layout_width="match_parent"
			            android:layout_height="0dip"
			            android:layout_weight="1"
			            android:layout_marginBottom="4dp"
			            android:text="@string/app_name"
			            android:textColor="#666"
			            android:textSize="12sp"
			            android:textStyle="bold" />

	            </LinearLayout>
	        
	        </LinearLayout>
	      	<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="48dp" >

	            <ImageView
	                android:layout_width="32dp"
	                android:layout_height="32dp"
	                android:layout_margin="8dp"
	                android:src="@drawable/ic_tel"
	                android:contentDescription="@string/app_name" />
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="48dp"
	                android:orientation="vertical"
	                android:layout_marginBottom="4dp" >

				  <TextView
			            android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
			            android:text="@string/txt_tel"
			            android:textColor="#aaa"
			            android:textSize="12sp" />
			        
			       <TextView
			            android:id="@+id/text_view_tel"
			            android:layout_width="match_parent"
			            android:layout_height="0dip"
			            android:layout_weight="1"
			            android:layout_marginBottom="4dp"
			            android:text="@string/app_name"
			            android:textColor="#666"
			            android:textSize="12sp"
			            android:textStyle="bold" />

	            </LinearLayout>
	        
	        </LinearLayout>
	        
	     </LinearLayout>
        
    </ScrollView>

</LinearLayout>
