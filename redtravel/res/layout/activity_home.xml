            android:layout_marginTop="8dp"
            android:background="@drawable/bg_corners_border"
            android:orientation="vertical" >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginBottom="8dp"
